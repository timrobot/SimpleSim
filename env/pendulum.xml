<mujoco model="UpdatedPhysics">
    <option timestep="0.01" gravity="0 0 -9.81"/>
    
    <worldbody>
        <!-- Light Source -->
        <light diffuse="0.5 0.5 0.5" pos="0 0 3" dir="0 0 -1"/>

        <!-- Ground Plane -->
        <geom type="plane" size="1 1 0.1" rgba="0.9 0 0 1"/>

        <!-- Body with Hinge Joint -->
        <body name="pendulum_joint" pos="0 0 2">
            <joint name="pin" type="hinge" axis="0 1 0" pos="0 0 0.5" damping="0.01"/>
            <geom type="cylinder" size="0.05 0.5" rgba="0 0.9 0 1" mass="1"/>
        </body>
    </worldbody>

    <!-- Actuators -->
    <actuator>
        <motor joint="pin" name="torque" gear="1" ctrlrange="-4 4"/>
    </actuator>

    <!-- Sensors -->
    <sensor>
        <jointpos joint="pin" noise="0.05" />
        <jointvel joint="pin" noise="0.1" />
    </sensor>
</mujoco>
